{
  "name": "ltth-electron",
  "version": "1.0.3",
  "description": "Professional TikTok LIVE streaming tool with overlays, alerts, TTS and automation",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:server": "node server.js",
    "dev": "nodemon server.js",
    "electron:dev": "NODE_ENV=development electron .",
    "build:css": "tailwindcss -i ./public/css/tailwind.input.css -o ./public/css/tailwind.output.css --minify",
    "watch:css": "tailwindcss -i ./public/css/tailwind.input.css -o ./public/css/tailwind.output.css --watch",
    "build": "npm run build:css",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:dir": "electron-builder --dir"
  },
  "keywords": [
    "tiktok",
    "streaming",
    "obs",
    "overlay",
    "alerts",
    "tts"
  ],
  "author": "Loggableim <loggableim@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0 <24.0.0"
  },
  "build": {
    "appId": "com.loggableim.ltth.electron",
    "productName": "LTTH",
    "copyright": "Copyright Â© 2025 Loggableim",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!test*",
      "!.github",
      "!.git",
      "!docs",
      "!wiki",
      "!dist"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LTTH",
      "license": "LICENSE.md"
    },
    "publish": {
      "provider": "github",
      "owner": "Loggableim",
      "repo": "ltth.electron",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@eulerstream/euler-websocket-sdk": "^0.0.6",
    "auto-launch": "^5.0.6",
    "axios": "^1.12.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.9.0",
    "bootstrap": "^5.1.3",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "franc-min": "^6.2.0",
    "gsap": "^3.13.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^17.0.0",
    "matter-js": "^0.20.0",
    "multer": "^2.0.2",
    "nanoid": "^5.1.6",
    "obs-websocket-js": "^5.0.6",
    "open": "^10.0.3",
    "osc": "^2.4.5",
    "playwright": "^1.56.1",
    "puppeteer": "^24.30.0",
    "socket.io": "^4.6.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "systeminformation": "^5.27.11",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3",
    "zip-lib": "^1.1.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.2",
    "p-queue": "^8.1.1",
    "postcss": "^8.5.6",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.4.18"
  }
}
