{
  "name": "tiktok-stream-tool-electron",
  "version": "1.0.3",
  "description": "Professional TikTok LIVE streaming tool with overlays, alerts, TTS and automation - Windows Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "npm run build:css && electron-builder",
    "build:css": "tailwindcss -i ./public/css/tailwind.input.css -o ./public/css/tailwind.output.css --minify",
    "watch:css": "tailwindcss -i ./public/css/tailwind.input.css -o ./public/css/tailwind.output.css --watch",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.pupcids.tiktok-stream-tool",
    "productName": "TikTok Stream Tool",
    "copyright": "Copyright Â© 2024",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "app/**/*",
      "modules/**/*",
      "routes/**/*",
      "plugins/**/*",
      "public/**/*",
      "locales/**/*",
      "tts/**/*",
      "data/**/*",
      "docs/**/*",
      "wiki/**/*",
      "scripts/**/*",
      "server.js",
      "launch.js",
      "package.json",
      "package-lock.json",
      "postcss.config.js",
      "tailwind.config.js",
      ".env.example",
      "!**/*.md",
      "!test/**/*",
      "!test-*.js",
      "!load-test-*.js",
      "!validate-*.js",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraFiles": [
      {
        "from": "user_configs",
        "to": "user_configs",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "user_data",
        "to": "user_data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Pup Cids"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TikTok Stream Tool"
    },
    "portable": {
      "artifactName": "TikTok-Stream-Tool-Portable-${version}.exe"
    }
  },
  "keywords": [
    "tiktok",
    "streaming",
    "obs",
    "overlay",
    "alerts",
    "tts",
    "electron",
    "desktop"
  ],
  "author": "Pup Cids",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0 <24.0.0"
  },
  "dependencies": {
    "@eulerstream/euler-websocket-sdk": "^0.0.6",
    "auto-launch": "^5.0.6",
    "axios": "^1.12.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.9.0",
    "bootstrap": "^5.1.3",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "franc-min": "^6.2.0",
    "gsap": "^3.13.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^17.0.0",
    "matter-js": "^0.20.0",
    "multer": "^2.0.2",
    "nanoid": "^5.1.6",
    "obs-websocket-js": "^5.0.6",
    "open": "^10.0.3",
    "osc": "^2.4.5",
    "playwright": "^1.56.1",
    "puppeteer": "^24.30.0",
    "socket.io": "^4.6.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "systeminformation": "^5.27.11",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3",
    "zip-lib": "^1.1.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.2",
    "p-queue": "^8.1.1",
    "postcss": "^8.5.6",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.4.18"
  }
}
